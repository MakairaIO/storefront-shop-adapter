{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "jsx": "react",
    "paths": {
      "@makaira/storefront-types": ["../storefront-types/src"],
      "@makaira/storefront-types/*": ["../storefront-types/src/*"],
      "@makaira/storefront-shop-adapter-local/*": [
        "../storefront-shop-adapter-local/src/*"
      ],
      "@makaira/storefront-shop-adapter-local": [
        "../storefront-shop-adapter-local/src"
      ],
      "@makaira/storefront-shop-adapter-oxid/*": [
        "../storefront-shop-adapter-oxid/src/*"
      ],
      "@makaira/storefront-shop-adapter-oxid": [
        "../storefront-shop-adapter-oxid/src"
      ]
    }
  }
}
