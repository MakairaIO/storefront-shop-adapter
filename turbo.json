{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "lint": { "outputs": [] },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "clean": { "outputs": ["dist/**"], "dependsOn": [] },
    "build": { "outputs": ["dist/**"], "dependsOn": ["clean"] },
    "release": {
      "outputs": ["package.json"],
      "dependsOn": ["build"]
    }
  }
}
